<h1>配送先登録/一覧</h1>

<%= form_with model:@address, url: addresses_path, local:true do |f| %>
<table>
    <thead>
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
      </tr>
    </thead>
    <tbody>
       <tr>
        <td><%= f.text_field :postal_code %></td>
        <td><%= f.text_field :address %></td>
        <td><%= f.text_field :name %></td>
       </tr>
    </tbody>
 </table>
   <%= f.submit '新規登録', class:"btn btn-success" %>
    <% end %>

<table class="table table-bordered col-lg-7 ">
    <thead class="table-secondary">
      <tr>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
       <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <span><%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %></span>
          <span><%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %></span>
        </td>
       </tr>
      <% end %>
    </tbody>
 </table>