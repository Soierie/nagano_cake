<h1>会員情報編集</h1>
<%= form_with model: @customer, url: customer_path(@customer.id), local:true do |f| %>
<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td>
        <%= f.text_field :last_name, autofocus: true %>
      </td>
      <td>
        <%= f.text_field :first_name, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </td>
      <td>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td>
        <%= f.text_field :postal_code, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>住所</td>
      <td>
         <%= f.text_field :address, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td>
        <%= f.text_field :telephone_number, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </td>
    </tr>
  </tbody>
</table>
<%= f.submit '変更内容を保存' , class:"btn btn-success" %>
<% end %>

<%= link_to "退会する", customers_check_path, method: :patch, class:"btn btn-danger",data: { confirm: '本当に退会しますか?' } %>
