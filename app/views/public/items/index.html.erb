<div class="container">
<h1>商品一覧</h1>
   <div class="row">
      <% @items.each do |item| %>
      <div class="col-md-3">
         <%= link_to item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 225, 225 %>
         <% end %>
         <p><%= item.name %></p>
         <p><%= item.price %>円</p>
      </div>
      <% end %>
   </div>
<div class="mx-auto">
   <span><%= paginate @items %></span>
   </div>
</div>