<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>


<table>
  <tbody>
    <tr>
      <td>名前</td>
      <td>
        <%= f.label :last_name,"（姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
      </td>
      <td>
        <%= f.label :first_name,"(名)" %>
        <%= f.text_field :first_name, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.label :last_name,"(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </td>
      <td>
        <%= f.label :first_name,"(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </td>
    </tr>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td>
        <%= f.text_field :postal_code, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>住所</td>
      <td>
         <%= f.text_field :address, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td>
        <%= f.text_field :telephone_number, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>パスワード(6文字以上)</td>
      <td>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
      </tr>
    <tr>
      <td>パスワード(確認用)</td>
      <td>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    　</td>
    </tr>
  </tbody>
</table>

<div class="actions">
  <%= f.submit "新規登録" %>
</div>
<% end %>
<h2>既に登録済みの方</h2>
<P><%= link_to "こちら", new_customer_session_path %>からログインしてください</P>
