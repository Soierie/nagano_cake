<h1>商品新規登録</h1>
<%= form_with model: @item, url: admin_items_path, local:true do |f| %>
  <table>
    <tbody>
      <tr>
       <td>商品画像</td>
       <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
       <td>商品名</td>
       <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price %>円</td>
      </tr>
    　<tr>
    　  <td>
        <%= f.radio_button :is_active, TRUE  %>
    　　<%= f.label :is_active,  "販売中" %>
    　  </td>
    　  <td>
    　　<%= f.radio_button :is_active, FALSE  %>
    　　<%= f.label :is_active,  "販売停止中" %>
    　  </td>
    　</tr>
    </tbody>
  </table>
<%= f.submit '新規登録' %>
<% end %>