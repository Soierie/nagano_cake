<h1><%= @customer.last_name %>さんの会員情報編集</h1>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), local:true do |f| %>
<table>
  <tbody>
    <tr>
      <td>名前</td>
      <td>
        <%= f.label :last_name,"（姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
      </td>
      <td>
        <%= f.label :first_name,"(名)" %>
        <%= f.text_field :first_name, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
        <%= f.label :last_name_kana,"(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </td>
      <td>
        <%= f.label :first_name_kana,"(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td>
        <%= f.text_field :postal_code, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>住所</td>
      <td>
         <%= f.text_field :address, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>電話番号(ハイフンなし)</td>
      <td>
        <%= f.text_field :telephone_number, autofocus: true %>
      </td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </td>
    </tr>
     　<tr>
     　<td>会員ステータス</td>
    　  <td>
        <%= f.radio_button :is_active, TRUE  %>
    　　<%= f.label :is_active,  "有効" %>
    　  </td>
    　  <td>
    　　<%= f.radio_button :is_active, FALSE  %>
    　　<%= f.label :is_active,  "退会" %>
    　  </td>
    　</tr>
  </tbody>
</table>
<%= f.submit '変更を保存する' %>
<% end %>