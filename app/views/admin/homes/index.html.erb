<h1>注文履歴一覧</h1>
<table class="table table-bordered col-lg-7 mx-auto">
    <thead class="table-secondary">
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
      </tr>
    </thead>
     <tbody>
   　　 <% @orders.each do |order| %>
       <tr>
        <td>
          <%= link_to order.created_at, admin_order_path(order.id) %>
        </td>
        <td>
        <%= order.customer.last_name %>
 　　　　　<%= order.customer.first_name %>
 　　　　　</td>
        <td>
        <%= order.order_details.all.sum(:amount) %>
        </td>
       </tr>
      <% end %>
    </tbody>
 </table>
 <span><%= paginate @orders %></span>
